.main-chat
  .main-chat__group-info
    .main-chat__group-info__box
      .main-chat__group-info__box__current-group
        = @group.name
      .main-chat__group-info__box__participant
      - @group.users.each do |user|
        = user.name
    .main-chat__group-info__edit
      = link_to edit_group_path(@group) ,class: "edit-btn" do
        Edit
  .message-list
    = render @messages
  .message-form
    = form_for [@group, @message], html: {class: "message-form__new-message"} do |f|
      .message-form__new-message__input
        = f.text_field :content, class: 'message-form__new-message__input__text', placeholder: 'type a message'
        = f.label :image, class: 'message-form__new-message__input__image' do
          = icon('fas', 'image')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'message-form__new-message__submit-btn'
